<div class="successfully-text">
  <p><%= flash[:notice] %></p>
</div>

<h1>Books</h1>
<table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <tbody> 
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to "show", book_path(book.id) %>
            <%= link_to "Edit", edit_book_path(book.id) %>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>

<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= @book.errors.count %> errors prihobited thie book from being saved:
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
  <div class="field">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>

  <div class="submit-button">
    <%= f.submit "Create Book" %>
  </div>
<% end %>
